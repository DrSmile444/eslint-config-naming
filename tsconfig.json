{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@configs/*": ["./src/configs/*"],
      "@rules/*": ["./src/rules/*"],
      "@tests/*": ["./tests/*"]
    },
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": ".",
    "isolatedModules": true
  },
  "include": [".eslint", "src", "tests", "scripts", "vitest.config.ts", "tsup.config.ts", "docs/.vitepress/**/*.ts"],
  "files": ["docs/.vitepress/config.ts"]
}
